<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ui.part.PartActivity">

  <data>

    <import type="android.view.View"/>

    <variable
            name="viewModel"
            type="ua.com.d_garage.deutschegarage.ui.part.description.DescriptionViewModel"/>
  </data>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_action_bar_height"
    android:paddingStart="@dimen/top_action_bar_padding_horizontal"
    android:paddingEnd="@dimen/top_action_bar_padding_horizontal"
    android:background="@color/colorPrimaryDark">

  <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/white"
          android:layout_centerInParent="true"
          android:text="@string/description_fragment_title"
          android:textStyle="bold"
          android:fontFamily="@font/averia_libre_light"
          android:textSize="@dimen/main_activity_title_size"/>

  <ImageView
          android:id="@+id/btn_description_close"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_alignParentStart="true"
          android:padding="@dimen/top_action_button_padding"
          android:src="@drawable/ic_back"
          android:background="@drawable/ripple_action_bar_btn"
          android:onClick="@{()->viewModel.close()}"
          android:contentDescription="@string/app_name"/>

</RelativeLayout>

</layout>
