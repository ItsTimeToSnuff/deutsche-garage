<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:id="@+id/field_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/description_field_margin"
            android:padding="@dimen/container_padding"
            android:layout_weight="1"
            android:layout_gravity="center|start"
            android:textStyle="bold"
            android:fontFamily="@font/averia_libre_light"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/description_field_text_size"
            android:background="@drawable/bg_bordered"
            android:elevation="@dimen/description_field_elevation"/>

    <TextView
            android:id="@+id/field_value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/description_field_margin"
            android:padding="@dimen/container_padding"
            android:layout_weight="1"
            android:layout_gravity="center|start"
            android:fontFamily="@font/averia_libre_light"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/description_field_text_size"
            android:background="@drawable/bg_bordered"
            android:elevation="@dimen/description_field_elevation"/>

</LinearLayout>